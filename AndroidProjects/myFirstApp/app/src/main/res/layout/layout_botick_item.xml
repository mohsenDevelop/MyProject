<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/standard_margin"
    >

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:src="@drawable/pic1_clothes"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_margin_x2"
        android:layout_alignBottom="@id/image_item"
        >


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="متن لورم ایپسون ساختگی"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/large_font_size"
            />

        <TextView
            android:id="@+id/txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_title"
            android:textSize="@dimen/medium_font_size"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_view"
            android:layout_alignBottom="@id/txt_view"
            android:layout_toLeftOf="@id/txt_view"
            android:src="@drawable/ic_views_white"
            />

    </RelativeLayout>






</RelativeLayout>