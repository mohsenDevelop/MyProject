<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/standard_card_elevation"
    app:cardCornerRadius="@dimen/standard_card_radius"
    android:layout_marginRight="@dimen/standard_margin"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_margin">

        <ImageView
            android:id="@+id/image_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/fashion"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            />

        <TextView
            android:id="@+id/text_view_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_feature_last_post"
            android:layout_below="@+id/image_feature"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/standard_margin"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
